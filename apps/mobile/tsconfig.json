{
  "compilerOptions": {
    "target": "ES2021",
    "module": "ESNext",
    "jsx": "react-native",
    "strict": true,
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": "./src",
    "paths": {
      "@/navigation/*": [
        "navigation/*"
      ],
      "@/screens/*": [
        "screens/*"
      ],
      "@/theme/*": [
        "theme/*"
      ],
      "@/store/*": [
        "store/*"
      ],
      "@/constants/*": [
        "constants/*"
      ],
      "@/providers/*": [
        "providers/*"
      ],
      "@/storage/*": [
        "storage/*"
      ],
      "@/services/*": [
        "services/*"
      ],
      "@/config/*": [
        "config/*"
      ]
    }
  },
  "include": [
    "src",
    "App.tsx"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
  "extends": "expo/tsconfig.base"
}
